<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="judul" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/notoserif_jp_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="isi" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/notoserif_jp_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

</resources>